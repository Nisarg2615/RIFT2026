:root {
    /* CLINICAL MEDICAL COLOR PALETTE (Hospital Grade) */
    /* NO GRADIENTS - Professional Healthcare Design */
    
    /* Neutral Base - Slate/Zinc for professional medical interface */
    --slate-50: #f8fafc;
    --slate-100: #f1f5f9;
    --slate-200: #e2e8f0;
    --slate-300: #cbd5e1;
    --slate-400: #94a3b8;
    --slate-500: #64748b;
    --slate-600: #475569;
    --slate-700: #334155;
    --slate-800: #1e293b;
    --slate-900: #0f172a;
    
    /* Semantic Alert Colors - Minimal use only */
    --red-50: #fef2f2;
    --red-100: #fee2e2;
    --red-500: #ef4444;
    --red-700: #b91c1c;
    
    --amber-50: #fffbeb;
    --amber-100: #fef3c7;
    --amber-500: #f59e0b;
    --amber-700: #b45309;
    
    --green-50: #f0fdf4;
    --green-100: #dcfce7;
    --green-500: #22c55e;
    --green-700: #15803d;
    
    --blue-50: #eff6ff;
    --blue-100: #dbeafe;
    --blue-500: #3b82f6;
    --blue-700: #1d4ed8;
    
    /* Text Colors - High Contrast for WCAG */
    --text-primary: #0f172a;      /* slate-900 */
    --text-secondary: #475569;    /* slate-600 */
    --text-light: #64748b;        /* slate-500 */
    --text-inverse: #ffffff;
    
    /* Background Colors */
    --bg-primary: #ffffff;        /* White */
    --bg-secondary: #f8fafc;      /* slate-50 */
    --bg-tertiary: #f1f5f9;       /* slate-100 */
    --bg-dark: #1e293b;           /* slate-800 */
    
    /* Medical UI Elements */
    --border-color: #e2e8f0;      /* slate-200 */
    --border-subtle: #f1f5f9;     /* slate-100 */
    
    /* Shadows - Minimal, subtle */
    --shadow-sm: 0 1px 2px rgba(15, 23, 42, 0.05);
    --shadow-md: 0 4px 6px rgba(15, 23, 42, 0.07);
    --shadow-lg: 0 8px 12px rgba(15, 23, 42, 0.1);
    
    /* Spacing - Information dense */
    --radius-sm: 4px;
    --radius-md: 6px;
    --radius-lg: 8px;
    
    /* Transitions - Subtle, not flashy */
    --transition: all 0.2s ease-out;
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Inter', 'Roboto',
        sans-serif;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    background: linear-gradient(180deg, #f7fafc 0%, #edf2f7 100%);
    color: var(--text-primary);
    line-height: 1.6;
}

html, body, #root {
    min-height: 100vh;
}

/* ===== HEADER ===== */
.header {
    background: var(--bg-primary);
    padding: 1.25rem 0;
    border-bottom: 1px solid var(--border-color);
    position: sticky;
    top: 0;
    z-index: 100;
    box-shadow: var(--shadow-sm);
    backdrop-filter: blur(10px);
    background-color: rgba(255, 255, 255, 0.95);
}

.header-content {
    max-width: 1600px;
    margin: 0 auto;
    padding: 0 2.5rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;
    color: var(--text-primary);
}

.logo-icon {
    font-size: 1.75rem;
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.logo-text h1 {
    font-size: 1.3rem;
    margin: 0;
    font-weight: 700;
    letter-spacing: -0.5px;
}

.logo-text p {
    margin: 0;
    font-size: 0.75rem;
    color: var(--text-light);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    font-weight: 600;
}

.nav {
    display: flex;
    gap: 2rem;
    align-items: center;
}

.nav-link {
    color: var(--text-secondary);
    text-decoration: none;
    font-weight: 500;
    font-size: 0.95rem;
    transition: var(--transition);
    cursor: pointer;
    border: none;
    background: none;
    padding: 0.5rem 1rem;
    border-radius: var(--radius-md);
}

.nav-link:hover {
    color: var(--text-primary);
    background: var(--bg-secondary);
}

.nav-link.active {
    color: #667eea;
    background: rgba(102, 126, 234, 0.1);
}

.user-profile {
    font-size: 1.5rem;
    cursor: pointer;
    transition: var(--transition);
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: var(--radius-md);
    background: var(--bg-secondary);
    border: 1px solid var(--border-color);
}

.user-profile:hover {
    transform: scale(1.05);
    box-shadow: var(--shadow-md);
}

/* ===== UPLOAD SECTION ===== */
.upload-box {
    border: 2px dashed var(--border-color);
    border-radius: var(--radius-lg);
    padding: 4rem 2.5rem;
    text-align: center;
    background: linear-gradient(135deg, var(--bg-secondary) 0%, var(--bg-tertiary) 100%);
    transition: var(--transition);
    cursor: pointer;
    position: relative;
    overflow: hidden;
}

.upload-box::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.08), rgba(245, 87, 108, 0.08));
    opacity: 0;
    transition: var(--transition);
    pointer-events: none;
}

.upload-box:hover {
    border-color: #667eea;
    box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
}

.upload-box:hover::before {
    opacity: 1;
}

.upload-box.active {
    border-color: #667eea;
    background: rgba(102, 126, 234, 0.05);
    box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.15);
}

.upload-icon {
    font-size: 3.5rem;
    margin-bottom: 1rem;
    position: relative;
    z-index: 1;
}

.upload-box p {
    margin: 0.75rem 0;
    color: var(--text-primary);
    font-weight: 500;
    font-size: 1.05rem;
    position: relative;
    z-index: 1;
}

.upload-box .instructions {
    font-size: 0.9rem;
    color: var(--text-light);
    position: relative;
    z-index: 1;
}

input[type="file"] {
    display: none;
}

.upload-actions {
    margin-top: 2rem;
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
}

/* ===== BUTTONS ===== */
.btn {
    padding: 0.75rem 2rem;
    border: none;
    border-radius: var(--radius-md);
    font-weight: 600;
    cursor: pointer;
    transition: var(--transition);
    font-size: 0.95rem;
    letter-spacing: -0.3px;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
}

.btn-primary {
    background: var(--gradient-primary);
    color: white;
    box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
    border: none;
}

.btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
}

.btn-primary:active {
    transform: translateY(0);
}

.btn-secondary {
    background: var(--bg-secondary);
    color: var(--text-primary);
    border: 1px solid var(--border-color);
    box-shadow: var(--shadow-sm);
}

.btn-secondary:hover {
    background: var(--bg-tertiary);
    border-color: #667eea;
    box-shadow: var(--shadow-md);
    transform: translateY(-1px);
}

.btn-tertiary {
    background: transparent;
    color: #667eea;
    border: 1px solid #667eea;
}

.btn-tertiary:hover {
    background: rgba(102, 126, 234, 0.05);
}

/* ===== LOADING ===== */
.loading {
    text-align: center;
    padding: 4rem 2rem;
}

.spinner {
    display: inline-block;
    width: 48px;
    height: 48px;
    border: 3px solid rgba(102, 126, 234, 0.2);
    border-top: 3px solid #667eea;
    border-radius: 50%;
    animation: spin 1s linear infinite;
}

@keyframes spin {
    0% {
        transform: rotate(0deg);
    }
    100% {
        transform: rotate(360deg);
    }
}

.loading-text {
    margin-top: 1rem;
    color: var(--text-secondary);
    font-weight: 500;
}

/* ===== ERROR MESSAGE ===== */
.error-message {
    background: linear-gradient(135deg, rgba(245, 101, 101, 0.08), rgba(245, 101, 101, 0.04));
    border-left: 3px solid var(--danger);
    border-radius: var(--radius-lg);
    padding: 1.25rem;
    margin-bottom: 2rem;
    display: flex;
    gap: 1rem;
    align-items: flex-start;
    box-shadow: var(--shadow-sm);
    backdrop-filter: blur(10px);
}

.error-message-icon {
    color: #991b1b;
    opacity: 1;
    flex-shrink: 0;
}

.error-message-text {
    opacity: 1;
    transform: translateY(0);
    pointer-events: auto;
}

.error-message.show {
    opacity: 1;
    transform: translateY(0);
    pointer-events: auto;
}

/* ===== SECTIONS ===== */
.main-container {
    max-width: 1600px;
    margin: 0 auto;
    padding: 3rem 2.5rem;
}

.section {
    background: var(--bg-primary);
    border-radius: var(--radius-lg);
    padding: 2.5rem;
    margin-bottom: 2.5rem;
    border: 1px solid var(--border-color);
    box-shadow: var(--shadow-md);
    transition: var(--transition);
    backdrop-filter: blur(10px);
}

.section:hover {
    box-shadow: var(--shadow-lg);
    border-color: #d1e4ff;
}

.section-title {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 2rem;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    color: var(--text-primary);
    letter-spacing: -0.3px;
}

.section-title-icon {
    font-size: 1.75rem;
    opacity: 0.8;
}

/* ===== SUMMARY DASHBOARD ===== */
.widget-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
}

.widget {
    background: var(--bg-primary);
    padding: 2rem;
    border-radius: var(--radius-lg);
    border: 1px solid var(--border-color);
    transition: var(--transition);
    box-shadow: var(--shadow-md);
    position: relative;
    overflow: hidden;
    cursor: pointer;
}

.widget::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: var(--success);
}

.widget.warning::before {
    background: var(--warning);
}

.widget.critical::before {
    background: var(--danger);
}

.widget:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
    border-color: rgba(102, 126, 234, 0.3);
}

.widget-label {
    color: var(--text-light);
    font-size: 0.8rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.widget-value {
    font-size: 2.8rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 0.5rem;
    letter-spacing: -1px;
}

.widget-detail {
    color: var(--text-secondary);
    font-size: 0.95rem;
    line-height: 1.5;
}

/* ===== GENE PANEL ===== */
.gene-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
    gap: 1.5rem;
}

.gene-card {
    background: var(--bg-primary);
    padding: 2rem;
    border-radius: var(--radius-lg);
    border: 1px solid var(--border-color);
    text-align: center;
    transition: var(--transition);
    cursor: pointer;
    position: relative;
    overflow: hidden;
    box-shadow: var(--shadow-md);
}

.gene-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: var(--success);
}

.gene-card.warning::before {
    background: var(--warning);
}

.gene-card.critical::before {
    background: var(--danger);
}

.gene-card:hover {
    transform: translateY(-6px);
    box-shadow: var(--shadow-lg);
    border-color: rgba(102, 126, 234, 0.3);
}

.gene-name {
    font-size: 1.4rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 0.5rem;
    letter-spacing: -0.5px;
}

.gene-phenotype {
    color: var(--text-light);
    font-size: 0.9rem;
    margin-bottom: 1.25rem;
    font-weight: 500;
}

.gene-status {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    margin-bottom: 1rem;
}

.status-dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: var(--success);
    box-shadow: 0 0 12px rgba(72, 187, 120, 0.4);
}

.gene-card.warning .status-dot {
    background: var(--warning);
    box-shadow: 0 0 12px rgba(237, 137, 54, 0.4);
}

.gene-card.critical .status-dot {
    background: var(--danger);
    box-shadow: 0 0 12px rgba(245, 101, 101, 0.4);
}

.status-text {
    font-weight: 600;
    color: var(--text-secondary);
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 0.3px;
}

.gene-explanation {
    color: var(--text-light);
    font-size: 0.85rem;
    margin-top: 1rem;
    padding-top: 1rem;
    border-top: 1px solid var(--border-color);
}

/* ===== DRUG TABLE ===== */
.table-container {
    overflow-x: auto;
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-md);
}

.risk-table {
    width: 100%;
    border-collapse: collapse;
    font-size: 0.95rem;
}

.risk-table thead {
    background: linear-gradient(135deg, #f7fafc 0%, #edf2f7 100%);
    border-bottom: 1px solid var(--border-color);
}

.risk-table th {
    padding: 1.25rem;
    text-align: left;
    font-weight: 700;
    color: var(--text-primary);
    letter-spacing: -0.3px;
}

.risk-table td {
    padding: 1.25rem;
    border-bottom: 1px solid var(--border-color);
}

.risk-table tbody tr {
    transition: var(--transition);
}

.risk-table tbody tr:hover {
    background: rgba(102, 126, 234, 0.04);
}

.risk-table tbody tr:last-child td {
    border-bottom: none;
}

.risk-cell {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-weight: 500;
}

.risk-icon {
    font-size: 1.3rem;
}

.risk-safe {
    color: var(--success);
}

.risk-warning {
    color: var(--warning);
}

.risk-danger {
    color: var(--danger);
}

/* ===== BADGES ===== */
.badge {
    display: inline-flex;
    align-items: center;
    padding: 0.4rem 0.9rem;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 600;
    letter-spacing: 0.2px;
    text-transform: uppercase;
}

.badge-success {
    background: linear-gradient(135deg, rgba(72, 187, 120, 0.12), rgba(72, 187, 120, 0.06));
    color: #276749;
    border: 1px solid rgba(72, 187, 120, 0.3);
}

.badge-warning {
    background: linear-gradient(135deg, rgba(237, 137, 54, 0.12), rgba(237, 137, 54, 0.06));
    color: #7c2d12;
    border: 1px solid rgba(237, 137, 54, 0.3);
}

.badge-danger {
    background: linear-gradient(135deg, rgba(245, 101, 101, 0.12), rgba(245, 101, 101, 0.06));
    color: #742a2a;
    border: 1px solid rgba(245, 101, 101, 0.3);
}

.badge-info {
    background: linear-gradient(135deg, rgba(66, 153, 225, 0.12), rgba(66, 153, 225, 0.06));
    color: #2c5282;
    border: 1px solid rgba(66, 153, 225, 0.3);
}

/* ===== ALERTS ===== */
.alert {
    padding: 1.5rem;
    border-radius: var(--radius-lg);
    margin-bottom: 2rem;
    display: flex;
    gap: 1rem;
    border-left: 3px solid var(--border-color);
    background: var(--bg-secondary);
    box-shadow: var(--shadow-sm);
}

.alert-critical {
    background: linear-gradient(135deg, rgba(245, 101, 101, 0.08), rgba(245, 101, 101, 0.04));
    border-left-color: var(--danger);
}

.alert-warning {
    background: linear-gradient(135deg, rgba(237, 137, 54, 0.08), rgba(237, 137, 54, 0.04));
    border-left-color: var(--warning);
}

.alert-icon {
    font-size: 1.5rem;
    flex-shrink: 0;
}

/* ===== HIDDEN ===== */
.hidden {
    display: none !important;
}

/* ===== RESPONSIVE ===== */
@media (max-width: 768px) {
    .widget-grid {
        grid-template-columns: 1fr;
    }

    .gene-grid {
        grid-template-columns: 1fr;
    }

    .nav {
        gap: 0.5rem;
        font-size: 0.9rem;
    }

    .header-content {
        padding: 0 1rem;
    }

    .main-container {
        padding: 1rem;
    }

    .section {
        padding: 1rem;
    }
}
